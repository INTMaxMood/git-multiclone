# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: genCounter()
#
# Description:
#   Pages counter.
#
# Usage:
#   genCounter
#
# Examples:
#   genCounter
#

function genCounter() {

  local _FUNCTION_ID="genCounter"
  local _STATE="0"

  local pages="$1"
  local _max_pages=0

  _max_per_pages=0

  _max_pages=$((pages * 30))

  _max_per_pages=$((_max_pages / 100 + 1))

  return "$_STATE"

}
