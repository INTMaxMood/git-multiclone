# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: pagesCounter()
#
# Description:
#   Pages counter.
#
# Usage:
#   pagesCounter
#
# Examples:
#   pagesCounter
#

function pagesCounter() {

  local _FUNCTION_ID="pagesCounter"
  local _STATE="0"

  local pages="$1"
  local _max_pages=0

  _max_per_pages=0

  _max_pages=$((pages * 30))

  _max_per_pages=$((_max_pages / 100 + 1))

  return "$_STATE"

}
